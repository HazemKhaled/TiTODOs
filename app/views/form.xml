<Alloy>
  <Window onOpen="windowOpened" title="Add Task">
    <RightNavButton platform="ios">
      <Button onClick="saveBtnClicked">Save</Button>
    </RightNavButton>
    <Menu platform="android">
      <MenuItem onClick="saveBtnClicked" showAsAction="Ti.Android.SHOW_AS_ACTION_ALWAYS" title="Save"/>
    </Menu>
    <ScrollView>
      <TextField hintText="Text" id="text"/>
      <ImageView id="image" onClick="showImageOptionDialog"/>
    </ScrollView>
  </Window>
</Alloy>
